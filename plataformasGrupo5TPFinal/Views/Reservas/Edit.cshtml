@model plataformasGrupo5TPFinal.Models.Reservas

@{
    ViewData["Title"] = "Edit";
    Layout = "LayoutMain";
}

<h1>Editar reserva</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="fDesde" class="control-label"></label>
                <input asp-for="fDesde" class="form-control" />
                <span asp-validation-for="fDesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fHasta" class="control-label"></label>
                <input asp-for="fHasta" class="form-control" />
                <span asp-validation-for="fHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codAlojamiento" class="control-label"></label>
                <input asp-for="codAlojamiento" class="form-control" />
                <span asp-validation-for="codAlojamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dniPersona" class="control-label"></label>
                <input asp-for="dniPersona" class="form-control" />
                <span asp-validation-for="dniPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index"><button class="btn btn-dark">Volver a la lista</button></a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
