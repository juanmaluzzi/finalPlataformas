@model plataformasGrupo5TPFinal.Models.Reservas

@{
    ViewData["Title"] = "Delete";
    Layout = "LayoutMain";
}

<h1>Eliminar reserva</h1>

<h3>¿Estás seguro que deseas eliminar la siguiente reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fDesde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fDesde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fHasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fHasta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.codAlojamiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.codAlojamiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dniPersona)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dniPersona)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
    <a asp-action="Index"><button class="btn btn-dark">Volver a la lista</button></a>
</div>
