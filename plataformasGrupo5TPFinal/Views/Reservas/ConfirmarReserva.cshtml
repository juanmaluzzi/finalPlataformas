@model plataformasGrupo5TPFinal.Models.Reservas

@{
    
    ViewData["Title"] = "Confirmar";
    Layout = "LayoutMain";
}

<h1>Confirmar reserva</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <span class="text-danger align-text-center">@ViewData["mensaje"]</span>
        <form asp-controller="Reservas" asp-action="ConfirmarReserva">
            <div class="form-group">
                <label asp-for="codAlojamiento" class="control-label">Código de alojamiento:</label>
                <input asp-for="codAlojamiento" class="form-control" hidden value="@ViewData["codAloj"]"/>
                    
                    <span>
                    @ViewData["codAloj"]
                    </span>
                    
            </div>
            <div class="form-group">
                <label id="cantPersonas" class="control-label">Cantidad de personas</label>
                <input id="cantPersonas" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="fDesde" class="control-label">Fecha desde</label>
                <input asp-for="fDesde" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="fHasta" class="control-label">Fecha hasta</label>
                <input asp-for="fHasta" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index"><button class="btn btn-dark">Volver a la lista</button></a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
