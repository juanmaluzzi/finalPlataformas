@model plataformasGrupo5TPFinal.Models.Alojamiento

@{
    ViewData["Title"] = "Create";
    Layout = "LayoutMain";
}

<h1>Crear alojamiento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="aCodigo" class="control-label"></label>
                <input asp-for="aCodigo" class="form-control" />
                <span asp-validation-for="aCodigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="aCiudad" class="control-label"></label>
                <input asp-for="aCiudad" class="form-control" />
                <span asp-validation-for="aCiudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="aBarrio" class="control-label"></label>
                <input asp-for="aBarrio" class="form-control" />
                <span asp-validation-for="aBarrio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="aEstrellas" class="control-label"></label>
                <input asp-for="aEstrellas" class="form-control" />
                <span asp-validation-for="aEstrellas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="aCantPersonas" class="control-label"></label>
                <input asp-for="aCantPersonas" class="form-control" />
                <span asp-validation-for="aCantPersonas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="aTV" /> @Html.DisplayNameFor(model => model.aTV)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cPrecioxDia" class="control-label"></label>
                <input asp-for="cPrecioxDia" class="form-control" />
                <span asp-validation-for="cPrecioxDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cHabitaciones" class="control-label"></label>
                <input asp-for="cHabitaciones" class="form-control" />
                <span asp-validation-for="cHabitaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cbanios" class="control-label"></label>
                <input asp-for="cbanios" class="form-control" />
                <span asp-validation-for="cbanios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hPrecioxPersona" class="control-label"></label>
                <input asp-for="hPrecioxPersona" class="form-control" />
                <span asp-validation-for="hPrecioxPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
     <a asp-action="Index"><button class="btn btn-dark">Volver a la lista</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
